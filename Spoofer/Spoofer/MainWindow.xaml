<Window x:Class="Spoofer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spoofer" Height="400" Width="600" Background="#FFE06DF3">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="Введите URL:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="urlTextBox" Width="550" Height="30" Margin="0,0,0,20" />

            <Button Content="Проверить" Width="100" Height="30" Click="CheckButton_Click" />
            <ProgressBar Name="progressBar" Width="550" Height="20" Margin="0,20,0,0" Visibility="Hidden" />

            <TextBlock Name="resultTextBlock" Width="550" Height="200" Margin="0,20,0,0" TextWrapping="Wrap" FontSize="14" />
        </StackPanel>
    </Grid>
</Window>